<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Board">
	<insert id="insertVideo" parameterType="vdto">
		insert into video (video_title,video_content,video_img,video_writer) values (#{video_title},#{video_content},#{video_img},'모나미')
	</insert>
	<update id="updateVideo" parameterType="vdto">
		update video set (video_title = #{video_title}, video_content = #{video_content}) 
	</update>
	<select id="getBoardList" parameterType="hashmap" resultType="vdto">
		select * from video order by video_idx desc limit #{startRow},#{pageSize}
	</select>
	<select id="getBoardCnt" resultType="_int">
		select count(*) from video
	</select>
	<select id="getLastIndex" resultType="_int">
	select max(video_idx) from video
	</select>
</mapper>